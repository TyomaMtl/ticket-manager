{% extends 'base.html.twig' %}

{% block title %}Ticket index{% endblock %}

{% block body %}
    {% if tickets is defined %}
        <h1>Ticket index</h1>

        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Title</th>
                    <th>Content</th>
                    <th>actions</th>
                </tr>
            </thead>
            <tbody>
            {% for ticket in tickets %}
                <tr>
                    <td>{{ ticket.id }}</td>
                    <td>{{ ticket.title }}</td>
                    <td>{{ ticket.content }}</td>
                    <td>
                        <a href="{{ path('ticket_show', {'id': ticket.id}) }}">show</a>
                        {% if is_granted("ROLE_ADMIN") %}
                            <a href="{{ path('ticket_edit', {'id': ticket.id}) }}">edit</a>
                            <a href="{{ path('ticket_delete', {'id': ticket.id}) }}">delete</a>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">no records found</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('ticket_new') }}">Create new</a>
    {% else %}
        <div class="alert alert-warning">{{ error }}</div>
    {% endif %}
{% endblock %}
